# Server Configuration
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# CORS Settings
CORS_ORIGIN=*
FRONTEND_URL=https://your-frontend-domain.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_ISSUER=fivem-store-api
JWT_AUDIENCE=fivem-store-users

# Database Configuration
DATABASE_URL=./database.sqlite
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=3600000
DB_BACKUP_PATH=./backups
DB_BACKUP_MAX=10
DB_AUTO_MIGRATE=true

# EfiBank PIX Payment Configuration
EFI_CLIENT_ID=your-efibank-client-id
EFI_CLIENT_SECRET=your-efibank-client-secret
EFI_PIX_KEY=your-pix-key-email-phone-or-random-key
EFI_WEBHOOK_URL=https://your-replit-app.replit.app/api/webhooks/efibank
EFI_WEBHOOK_SECRET=your-webhook-secret-token
EFI_ENVIRONMENT=production
EFI_BASE_URL=https://api-pix.gerencianet.com.br
EFI_DEFAULT_EXPIRATION=900
EFI_MIN_AMOUNT=0.01
EFI_MAX_AMOUNT=50000.00
EFI_AUTO_CANCEL=true
EFI_VALIDATE_SIGNATURE=true
EFI_TIMEOUT=30000
EFI_RETRY_ATTEMPTS=3
EFI_RETRY_DELAY=1000

# FiveM Server Integration
FIVEM_SERVER_URL=http://your-fivem-server-ip:30120
FIVEM_SERVER_TOKEN=your-fivem-server-api-token
FIVEM_TIMEOUT=10000
FIVEM_RETRY_ATTEMPTS=3
FIVEM_RETRY_DELAY=5000
FIVEM_DELIVERY_RETRIES=5
FIVEM_DELIVERY_INTERVAL=300000
FIVEM_BATCH_SIZE=10
FIVEM_WEBHOOK_SECRET=your-fivem-webhook-secret

# Email Configuration (Optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=FiveM Store <noreply@fivemstore.com>
EMAIL_REPLY_TO=support@fivemstore.com
EMAIL_BASE_URL=https://your-store.com

# Super Admin Configuration
SUPER_ADMIN_EMAIL=admin@your-store.com
SUPER_ADMIN_PASSWORD=your-secure-admin-password
ADMIN_AUTO_CREATE=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Security Settings
WEBHOOK_SECRET=your-generic-webhook-secret
TRUST_PROXY=false
COMPRESSION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_CONSOLE_ENABLED=true

# Feature Flags
FEATURES_WEBHOOKS=true
FEATURES_ADMIN=true
FEATURES_SERVER_INTEGRATION=true
FEATURES_ANALYTICS=true
FEATURES_EMAIL=true
MOCK_EXTERNAL_SERVICES=false

# API Configuration
API_BASE_URL=https://your-replit-app.replit.app
API_BODY_LIMIT=10mb
API_PARAMETER_LIMIT=100
API_TIMEOUT=30000
API_DEFAULT_LIMIT=20
API_MAX_LIMIT=100

# Development Settings (for development only)
# Remove these in production
MOCK_EXTERNAL_SERVICES=true
DB_WAL_MODE=true

# Optional: Additional EfiBank Settings
EFI_LOG_REQUESTS=false
EFI_LOG_WEBHOOKS=true
EFI_MASK_SENSITIVE=true
EFI_AUTO_STATUS_CHECK=true
EFI_CONFIRMATION_EMAILS=true
EFI_GENERATE_QR_CODES=true
EFI_RETRY_FAILED=true
EFI_FALLBACK_MOCK=false
EFI_EMAIL_ON_ERROR=false

# Optional: Admin Panel Settings
ADMIN_PANEL_ENABLED=false
ADMIN_PANEL_PATH=/admin

# Optional: Health Check Settings
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_FIVEM=true
HEALTH_CHECK_EFIBANK=true
HEALTH_CHECK_EMAIL=false

# Optional: Request Logging
REQUEST_LOGGING=false
VERBOSE_ERRORS=false

# Replit Specific (automatically set by Replit)
# REPL_SLUG=your-repl-name
# REPL_OWNER=your-username
# REPLIT_DOMAINS=your-domain.replit.app
